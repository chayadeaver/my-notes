<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-auto max-w-xl mx-auto">
    <%= form.text_field :title, placeholder: "Title", class: "form-input mb-3 rounded-md" %>
  </div>
  
  <div class="col-auto max-w-3xl mx-auto">
    <%= form.rich_text_area :body, placeholder: "Body", class: "form-textarea mb-3 rounded-md resize border" %>
  </div>
  

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary mb-3"%>
  </div>
<% end %>
