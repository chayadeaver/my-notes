<div class="bg-blue-200 p-10 rounded-lg shadow-lg max-w-lg mx-auto text-gray-700 text-center mt-32">
  <h2 class="font-black text-2xl mb-3">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-auto">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form-input mb-3 rounded-md", required: true %>
  </div>

  <div class="col-auto">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-input mb-3 rounded-md", required: true %>
  </div>

  <div class="col-auto">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-input mb-3 rounded-md", required: true %>
  </div>

  <div class="col-auto">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-input mb-3 rounded-md", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
</div>



<%= render "devise/shared/links" %>
