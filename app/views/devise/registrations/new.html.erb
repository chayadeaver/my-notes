<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-auto">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form-control mb-3", required: true %>
  </div>

  <div class="col-auto">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mb-3", required: true %>
  </div>

  <div class="col-auto">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control mb-3", required: true %>
  </div>

  <div class="col-auto">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control mb-3", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
