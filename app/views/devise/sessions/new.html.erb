<div class="bg-blue-200 p-10 rounded-lg shadow-lg max-w-lg mx-auto text-gray-700 text-center mt-32">

  <h2 class="font-black text-2xl mb-3">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 


    <div class="col-auto">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-input mb-3 rounded-md", required: true %>
    </div>

    <div class="col-auto">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-input mb-3 rounded-md", required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="col-auto">
        <%= f.check_box :remember_me, class: "form-check-input mb-3" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
  <% end %>
    <%= render "devise/shared/links" %>
</div>




