<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 


  <div class="col-auto">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mb-3", required: true %>
  </div>

  <div class="col-auto">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control mb-3", required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="col-auto">
      <%= f.check_box :remember_me, class: "form-check-input mb-3" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class: "btn btn-primary mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
